<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="?android:colorAccent"/>
            <corners android:radius="@dimen/default_button_radius"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="@color/gold_start"
                        android:endColor="@color/gold_end"
                        android:angle="270"/>
                    <corners android:radius="@dimen/default_button_radius"/>
                </shape>
            </item>
            <item android:start="@dimen/default_button_border"
                android:end="@dimen/default_button_border"
                android:top="@dimen/default_button_border"
                android:bottom="@dimen/default_button_border">
                <shape>
                    <corners android:radius="@dimen/default_button_radius"/>
                    <gradient
                        android:startColor="@color/red_start"
                        android:endColor="@color/red_end"
                        android:angle="270"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>